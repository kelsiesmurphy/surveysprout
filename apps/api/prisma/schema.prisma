generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String? // Nullable for magic link or social login
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Survey {
  id             Int              @id @default(autoincrement())
  createdAt      DateTime         @default(now())
  updatedAt      DateTime?        @updatedAt
  deletedAt      DateTime?
  title          String           @db.VarChar(255)
  metadata       Json?
  theme          Json?
  surveyType     SurveyType       @default(POSTPURCHASE)
  SurveyQuestion SurveyQuestion[]
  SurveyResponse SurveyResponse[]
}

model SurveyQuestion {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime?      @updatedAt
  deletedAt    DateTime?
  surveyId     Int
  fieldName    String
  title        String
  subtitle     String
  icon         String
  questionType QuestionType
  options      Json[]
  survey       Survey         @relation(fields: [surveyId], references: [id])
  SurveyAnswer SurveyAnswer[]
}

model SurveyResponse {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime?      @updatedAt
  deletedAt    DateTime?
  surveyId     Int
  SurveyAnswer SurveyAnswer[]
  survey       Survey         @relation(fields: [surveyId], references: [id])
}

model SurveyAnswer {
  id               Int            @id @default(autoincrement())
  createdAt        DateTime       @default(now())
  updatedAt        DateTime?      @updatedAt
  deletedAt        DateTime?
  surveyResponseId Int
  surveyQuestionId Int
  textAnswer       String?
  sliderValue      Int?
  surveyQuestion   SurveyQuestion @relation(fields: [surveyQuestionId], references: [id])
  surveyResponse   SurveyResponse @relation(fields: [surveyResponseId], references: [id])
}

model ExampleBusiness {
  id                     Int                      @id @default(autoincrement())
  name                   String                   @db.VarChar(255)
  theme                  Json
  logoUrl                String
  ExampleBusinessProduct ExampleBusinessProduct[]
}

model ExampleBusinessProduct {
  id                Int                         @id @default(autoincrement())
  exampleBusinessId Int
  name              String                      @db.VarChar(255)
  description       String
  size              ExampleBusinessProductSize?
  image             String?
  exampleBusiness   ExampleBusiness             @relation(fields: [exampleBusinessId], references: [id])
}

model NewsletterContact {
  id        Int       @id @default(autoincrement())
  createdAt DateTime? @default(now())
  email     String    @unique
}

enum ExampleBusinessProductSize {
  SMALL
  MEDIUM
  LARGE
}

enum QuestionType {
  Options
  Text
  Slider
}

enum SurveyType {
  POSTPURCHASE
}
