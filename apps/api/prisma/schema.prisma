generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(uuid())
  email              String   @unique
  password           String?
  name               String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  hashedRefreshToken String?
  role               Role     @default(USER)
  surveys            Survey[]
}

model Survey {
  id             String           @id @default(uuid())
  createdAt      DateTime         @default(now())
  updatedAt      DateTime?        @updatedAt
  deletedAt      DateTime?
  title          String           @db.VarChar(255)
  metadata       Json?
  surveyType     SurveyType       @default(POSTPURCHASE)
  theme          Json?
  userId         String?
  user           User?            @relation(fields: [userId], references: [id])
  SurveyQuestion SurveyQuestion[]
  SurveyResponse SurveyResponse[]
}

model SurveyQuestion {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  surveyId     String
  fieldName    String
  title        String
  subtitle     String
  icon         String
  questionType QuestionType
  options      Json[]
  deletedAt    DateTime?
  updatedAt    DateTime?      @updatedAt
  SurveyAnswer SurveyAnswer[]
  survey       Survey         @relation(fields: [surveyId], references: [id])
}

model SurveyResponse {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  deletedAt    DateTime?
  surveyId     String
  updatedAt    DateTime?      @updatedAt
  SurveyAnswer SurveyAnswer[]
  survey       Survey         @relation(fields: [surveyId], references: [id])
}

model SurveyAnswer {
  id               Int            @id @default(autoincrement())
  createdAt        DateTime       @default(now())
  surveyResponseId Int
  surveyQuestionId Int
  textAnswer       String?
  sliderValue      Int?
  deletedAt        DateTime?
  updatedAt        DateTime?      @updatedAt
  surveyQuestion   SurveyQuestion @relation(fields: [surveyQuestionId], references: [id])
  surveyResponse   SurveyResponse @relation(fields: [surveyResponseId], references: [id])
}

model ExampleBusiness {
  id                     String                   @id @default(uuid())
  name                   String                   @db.VarChar(255)
  theme                  Json
  logoUrl                String
  ExampleBusinessProduct ExampleBusinessProduct[]
}

model ExampleBusinessProduct {
  id                String                      @id @default(uuid())
  exampleBusinessId String
  name              String                      @db.VarChar(255)
  description       String
  size              ExampleBusinessProductSize?
  image             String?
  exampleBusiness   ExampleBusiness             @relation(fields: [exampleBusinessId], references: [id])
}

model NewsletterContact {
  id        String    @id @default(uuid())
  email     String    @unique
  createdAt DateTime? @default(now())
}

enum ExampleBusinessProductSize {
  SMALL
  MEDIUM
  LARGE
}

enum QuestionType {
  Options
  Text
  Slider
}

enum SurveyType {
  POSTPURCHASE
}

enum Role {
  ADMIN
  EDITOR
  USER
}
